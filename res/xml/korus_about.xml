<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/about_settings">

        <!-- Korus Project version -->
        <org.lineageos.internal.preference.deviceinfo.LineageVersionPreference
                android:key="korus_version" />

        <!-- Korus Project OTA -->
        <Preference android:title="@string/korus_ota_title"
            android:summary="@string/korus_ota_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.korus.ota"
                android:targetClass="com.korus.ota.MainActivity" />
        </Preference>

        <!-- Build date -->
        <org.lineageos.internal.preference.deviceinfo.LineageBuildDatePreference
                android:key="build_date" />

	<!-- TanzenT Lab. Website -->
	<Preference android:title="@string/tanzent_web_site_title" >
		<intent android:action="android.intent.action.VIEW"
			android:data="https://tanzentlab.com/" />
	</Preference>

</PreferenceScreen>
